<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.error.ErrorServerEtcFragment">

    <include
        android:id="@+id/include_error_server_etc_app_bar"
        layout="@layout/fragment_error_server_etc_app_bar" />

    <ImageView
        android:id="@+id/iv_server_etc_error"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img_error_emoji"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_error_server_etc_app_bar" />

    <TextView
        android:id="@+id/tv_server_etc_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="@string/error_server_etc_title"
        android:textColor="@color/gray_gray1"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_server_etc_error"
        app:layout_constraintStart_toStartOf="@+id/iv_server_etc_error"
        app:layout_constraintTop_toBottomOf="@+id/iv_server_etc_error" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/pretendard_medium"
        android:lineSpacingExtra="6dp"
        android:text="@string/error_server_etc_description"
        android:textAlignment="center"
        android:textColor="@color/gray_gray1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_server_etc_error"
        app:layout_constraintStart_toStartOf="@+id/iv_server_etc_error"
        app:layout_constraintTop_toBottomOf="@+id/tv_server_etc_error_title" />

</androidx.constraintlayout.widget.ConstraintLayout>