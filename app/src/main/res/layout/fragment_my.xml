<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".presentation.my.MyFragment">

    <ImageView
        android:id="@+id/iv_my_setting"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleIv_my_profile"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_width="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_my_setting" />


    <TextView
        android:id="@+id/tv_my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:text="myName"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/circleIv_my_profile"
        app:layout_constraintTop_toTopOf="@id/circleIv_my_profile" />

    <TextView
        android:id="@+id/tv_my_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="example rank"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/tv_my_name"
        app:layout_constraintTop_toBottomOf="@id/tv_my_name" />


<!-- 글 목록 리스트 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_my_writingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="16dp"
        app:layout_constraintTop_toBottomOf="@id/circleIv_my_profile">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_my_writingList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_my_writing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_writing"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toBottomOf="@id/tv_my_comments"
                app:layout_constraintTop_toTopOf="@id/tv_my_writing" />

            <TextView
                android:id="@+id/tv_my_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/my_comments"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_my_writing" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toBottomOf="@id/tv_my_Bookmark"
                app:layout_constraintTop_toTopOf="@id/tv_my_comments" />

            <TextView
                android:id="@+id/tv_my_Bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/bookmark"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_my_comments" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

<!-- 업적 목록 리스트 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_my_achievementList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="16dp"
        app:layout_constraintTop_toBottomOf="@id/cv_my_writingList">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_my_achievementList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_my_achievementTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/achievement"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_my_achievementNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3 / 83"
                app:layout_constraintTop_toTopOf="@id/tv_my_achievementTitle"
                app:layout_constraintBottom_toBottomOf="@id/tv_my_achievementTitle"
                app:layout_constraintStart_toEndOf="@id/tv_my_achievementTitle"
                android:layout_marginStart="20dp"
                android:textColor="@color/gray"
                android:textSize="16sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_my_achievementList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_my_achievementTitle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>