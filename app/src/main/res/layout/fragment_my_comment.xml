<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.my.MyCommentFragment">

    <include
        android:id="@+id/include_my_comment_app_bar"
        layout="@layout/fragment_my_comment_app_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/include_my_comment_app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/recyclerview_my_comment_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>