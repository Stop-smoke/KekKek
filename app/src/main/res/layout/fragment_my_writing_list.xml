<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.myWritingList.MyWritingListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_myWritingList_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        app:layout_constraintTop_toTopOf="parent">
        <include layout="@layout/fragment_notification_app_bar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_myWritingList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf ="@id/cl_myWritingList_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/bg_gray"
        tools:listitem="@layout/item_community_postwriting"/>

</androidx.constraintlayout.widget.ConstraintLayout>