<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.onboarding.OnboardingNameFragment">

    <TextView
        android:id="@+id/tv_onboarding_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="당신의 이름은 무엇인가요?"
        android:textColor="@color/primary_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_onboarding_name"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/pretendard_medium"
        android:hint="이름을 입력하세요."
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/gray"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_onboarding_name"
        app:layout_constraintStart_toStartOf="@+id/tv_onboarding_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_name" />

    <TextView
        android:id="@+id/tv_onboarding_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="이미 존재하는 이름이에요!"
        android:textColor="@color/primary_blue"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/et_onboarding_name"
        app:layout_constraintTop_toBottomOf="@+id/et_onboarding_name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_onboarding_next"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_onboarding_button"
        android:enabled="false"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>