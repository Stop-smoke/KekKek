<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.post.popular.PopularPostFragment">

    <include
        android:id="@+id/include_popular_writing_list_app_bar"
        layout="@layout/fragment_popular_writing_list_app_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_popularWritingList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_popular_writing_list_app_bar"
        tools:listitem="@layout/item_post" />

</androidx.constraintlayout.widget.ConstraintLayout>