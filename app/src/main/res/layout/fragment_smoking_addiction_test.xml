<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.smokingaddictiontest.assessment.SmokingAddictionTestFragment">

    <include
        android:id="@+id/include_question_app_bar"
        layout="@layout/fragment_question_app_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressbar_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTintMode="src_in"
        android:max="8"
        app:indicatorColor="#3182F6"
        app:trackColor="#EFF1F9"
        app:trackThickness="6dp"
        tools:progress="4" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpagerTest"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>