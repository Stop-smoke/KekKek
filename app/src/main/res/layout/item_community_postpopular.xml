            app:layout_constraintEnd_toStartOf="@id/iv_itemPopular_heart2"
            app:layout_constraintTop_toTopOf="@id/tv_itemPopular_postType2"
            app:layout_constraintBottom_toBottomOf="@id/tv_itemPopular_postType2"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/iv_itemPopular_heart2"
