            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/tv_itemPopular_title2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/iv_itemPopular_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_view"
            app:layout_constraintEnd_toStartOf="@id/tv_itemPopular_viewNum2"
            app:layout_constraintTop_toTopOf="@id/tv_itemPopular_postType2"
