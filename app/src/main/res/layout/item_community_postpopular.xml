            app:layout_constraintBottom_toBottomOf="@id/tv_itemPopular_postType2"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/tv_itemPopular_heartNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="45dp"
            tools:text = "22222"
            android:textSize="10dp"
            android:textColor="@color/gray"
            app:layout_constraintEnd_toStartOf="@id/iv_itemPopular_chat2"
            app:layout_constraintTop_toTopOf="@id/tv_itemPopular_postType2"
