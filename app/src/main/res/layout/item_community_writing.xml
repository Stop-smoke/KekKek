<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleIv_itemWriting_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_itemWriting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/circleIv_itemWriting_profile"
        app:layout_constraintStart_toEndOf="@id/circleIv_itemWriting_profile"
        android:layout_marginStart="8dp"
        android:text="단짠단짠"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_itemWriting_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_itemWriting_name"
        app:layout_constraintStart_toStartOf="@id/tv_itemWriting_name"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:text="랭킹 111위"/>

    <TextView
        android:id="@+id/tv_itemWriting_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="example Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circleIv_itemWriting_profile"
        app:layout_constraintEnd_toStartOf="@id/iv_itemWriting_postImage"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tv_itemWriting_post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:text="sample text sample text sample textsample textsample textsample textsample textsample textsample textsample textsample text"
        app:layout_constraintEnd_toEndOf="@id/tv_itemWriting_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_itemWriting_title"/>

    <ImageView
        android:id="@+id/iv_itemWriting_postImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemWriting_post"
        android:src="@drawable/ic_launcher_background"
        android:clipToOutline="true"
        android:background="@drawable/bg_post_image"/>
    
    <View
        android:id="@+id/view_itemWriting_div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E7E7"
        app:layout_constraintTop_toBottomOf="@id/tv_itemWriting_post"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tv_itemWriting_timeStamp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="6시간 전"
        app:layout_constraintTop_toBottomOf="@id/view_itemWriting_div"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>

    <ImageView
        android:id="@+id/iv_itemPopular_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_view"
        app:layout_constraintEnd_toStartOf="@id/tv_itemPopular_viewNum1"
        app:layout_constraintTop_toTopOf="@id/tv_itemWriting_timeStamp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemWriting_timeStamp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/tv_itemPopular_viewNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="45dp"
        tools:text = "22222"
        android:textSize="10dp"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toStartOf="@id/iv_itemPopular_heart1"
        app:layout_constraintTop_toTopOf="@id/tv_itemWriting_timeStamp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemWriting_timeStamp"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/iv_itemPopular_heart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_heart_none"
        app:layout_constraintEnd_toStartOf="@id/tv_itemPopular_heartNum1"
        app:layout_constraintTop_toTopOf="@id/tv_itemWriting_timeStamp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemWriting_timeStamp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/tv_itemPopular_heartNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="45dp"
        tools:text = "22222"
        android:textSize="10dp"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toStartOf="@id/iv_itemPopular_chat1"
        app:layout_constraintTop_toTopOf="@id/tv_itemWriting_timeStamp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemWriting_timeStamp"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/iv_itemPopular_chat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chat"
        app:layout_constraintEnd_toStartOf="@id/tv_itemPopular_chatNum1"
        app:layout_constraintTop_toTopOf="@id/tv_itemWriting_timeStamp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemWriting_timeStamp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tv_itemPopular_chatNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="45dp"
        tools:text = "22222"
        android:textSize="10dp"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_itemWriting_timeStamp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemWriting_timeStamp"/>
</androidx.constraintlayout.widget.ConstraintLayout>