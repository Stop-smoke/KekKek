<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <EditText
        android:id="@+id/et_edit_introduction"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="소개글을 수정합니다."
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/gray_lightgray2"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_introduction_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="최대 50글자까지 입력 가능합니다."
        android:textColor="@color/gray_lightgray2"
        app:layout_constraintStart_toStartOf="@+id/et_edit_introduction"
        app:layout_constraintTop_toBottomOf="@+id/et_edit_introduction" />

    <TextView
        android:id="@+id/tv_editIntroduction_yes"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@id/et_edit_introduction"
        app:layout_constraintTop_toBottomOf="@id/et_edit_introduction"
        android:padding="4dp"
        android:text="확인"/>

    <TextView
        android:id="@+id/tv_editIntroduction_no"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@id/tv_editIntroduction_yes"
        app:layout_constraintTop_toBottomOf="@id/et_edit_introduction"
        android:layout_marginEnd="20dp"
        android:padding="4dp"
        android:text="취소"/>


</androidx.constraintlayout.widget.ConstraintLayout>