<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_rankStateItem_rankNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/pretendard_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleIv_rankStateItem_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginVertical="12dp"
        tools:src="@drawable/ic_ranking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_rankStateItem_rankNum"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rankStateItem_userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_bold"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/tv_rankingList_time"
        app:layout_constraintStart_toEndOf="@id/circleIv_rankStateItem_profile"
        app:layout_constraintTop_toTopOf="@id/circleIv_rankStateItem_profile"
        tools:text="언제까지어깨춤" />

    <TextView
        android:id="@+id/tv_rankStateItem_"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_regular"
        android:maxLines="1"
        android:textColor="@color/gray"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/tv_rankStateItem_userName"
        app:layout_constraintStart_toStartOf="@id/tv_rankStateItem_userName"
        app:layout_constraintTop_toBottomOf="@+id/tv_rankStateItem_userName"
        tools:text="을추게할거야탈골됐자나" />

    <TextView
        android:id="@+id/tv_rankingList_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textColor="@color/tv_blue"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="38일 23시간" />
</androidx.constraintlayout.widget.ConstraintLayout>