<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/home">

    <include app:graph="@navigation/nav_onboarding" />
    <include app:graph="@navigation/nav_settings"/>

    <fragment
        android:id="@+id/home"
        android:name="com.stopsmoke.kekkek.presentation.home.HomeFragment"
        app:route="home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_home_center"
            app:destination="@id/home_center" />
        <action
            android:id="@+id/action_home_to_home_tip"
            app:destination="@id/home_tip" />
    </fragment>

    <fragment
        android:id="@+id/home_tip"
        android:name="com.stopsmoke.kekkek.presentation.home.tip.HomeTipFragment"
        app:route="home_tip"
        tools:layout="@layout/fragment_home_tip" />

    <fragment
        android:id="@+id/home_center"
        android:name="com.stopsmoke.kekkek.presentation.home.center.HomeCenterFragment"
        app:route="home_center"
        tools:layout="@layout/fragment_home_center" />

    <fragment
        android:id="@+id/community"
        android:name="com.stopsmoke.kekkek.presentation.community.CommunityFragment"
        app:route="community"
        tools:layout="@layout/fragment_community">
        <action
            android:id="@+id/action_community_to_user_profile_screen"
            app:destination="@id/user_profile" >

            <argument
                android:name="uid"
                app:argType="string" />

        </action>

        <action
            android:id="@+id/action_community_page_to_nav_settings"
            app:destination="@id/nav_settings" />
        <action
            android:id="@+id/action_community_to_post_view"
            app:destination="@id/post_view" />
    </fragment>

    <fragment
        android:id="@+id/my_page"
        android:name="com.stopsmoke.kekkek.presentation.my.MyFragment"
        app:route="my"
        tools:layout="@layout/fragment_my">
        <action
            android:id="@+id/action_my_page_to_nav_settings"
            app:destination="@id/nav_settings" />
        <action
            android:id="@+id/action_my_page_to_notification"
            app:destination="@id/notification" />
        <action
            android:id="@+id/action_my_page_to_my_supportcenter"
            app:destination="@id/my_supportcenter" />
        <action
            android:id="@+id/action_myPage_to_myWritingList"
            app:destination="@id/my_writing_list" />
        <action
            android:id="@+id/action_myPage_to_myBookmarkList"
            app:destination="@id/my_bookmark_list" />
        <action
            android:id="@+id/action_myPage_to_myCommentList"
            app:destination="@id/my_comment_list" />
    </fragment>

    <fragment
        android:id="@+id/my_supportcenter"
        android:name="com.stopsmoke.kekkek.presentation.my.supportcenter.SupportCenterFragment"
        app:route="my_supportcenter"
        tools:layout="@layout/fragment_support_center" />

    <fragment
        android:id="@+id/test_page"
        android:name="com.stopsmoke.kekkek.presentation.test.TestFragment"
        app:route="test_page"
        tools:layout="@layout/fragment_test_onboarding" />

    <fragment
        android:id="@+id/notification"
        android:name="com.stopsmoke.kekkek.presentation.notification.NotificationFragment"
        app:route="notification"
        tools:layout="@layout/fragment_notification" />

    <fragment
        android:id="@+id/search"
        android:name="com.stopsmoke.kekkek.presentation.search.SearchFragment"
        app:route="search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/post_view"
        android:name="com.stopsmoke.kekkek.presentation.post.PostViewFragment"
        app:route="post_view"
        tools:layout="@layout/fragment_post_view" >
        <argument
            android:name="postArgument"
            app:argType="com.stopsmoke.kekkek.presentation.community.CommunityWritingItem" />
    </fragment>

    <fragment
        android:id="@+id/post_write"
        android:name="com.stopsmoke.kekkek.presentation.post.PostWriteFragment"
        app:route="post_write"
        tools:layout="@layout/fragment_post_write" />

    <fragment
        android:id="@+id/attainments"
        android:name="com.stopsmoke.kekkek.presentation.attainments.AttainmentsFragment"
        app:route="attainments"
        tools:layout="@layout/fragment_attainments" />

    <fragment
        android:id="@+id/my_bookmark_list"
        android:name="com.stopsmoke.kekkek.presentation.myBookmarkList.BookmarkFragment"
        app:route="my_bookmark_list"
        tools:layout="@layout/fragment_bookmark" />

    <fragment
        android:id="@+id/my_writing_list"
        android:name="com.stopsmoke.kekkek.presentation.myWritingList.MyWritingListFragment"
        app:route="my_writing_list"
        tools:layout="@layout/fragment_my_writing_list" />

    <fragment
        android:id="@+id/popular_writing_list"
        android:name="com.stopsmoke.kekkek.presentation.popularWritingList.PopularWritingListFragment"
        app:route="popular_writing_list"
        tools:layout="@layout/fragment_popular_writing_list" />

    <fragment
        android:id="@+id/my_post"
        android:name="com.stopsmoke.kekkek.presentation.my.MyPostFragment"
        app:route="my_post"
        tools:layout="@layout/fragment_my_post" />

    <fragment
        android:id="@+id/my_comment_list"
        android:name="com.stopsmoke.kekkek.presentation.myCommentList.MyCommentFragment"
        app:route="my_comment_list"
        tools:layout="@layout/fragment_my_comment" />

    <fragment
        android:id="@+id/user_profile"
        android:name="com.stopsmoke.kekkek.presentation.userprofile.UserProfileFragment"
        app:route="user_profile"
        tools:layout="@layout/fragment_user_profile">

        <argument
            android:name="uid"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/achievement"
        android:name="com.stopsmoke.kekkek.presentation.achievement.AchievementFragment"
        app:route="achievement"
        tools:layout="@layout/fragment_achievement" />


    <fragment
        android:id="@+id/ranking_list"
        android:name="com.stopsmoke.kekkek.presentation.rankingList.RankingListFragment"
        app:route="ranking_list"
        tools:layout="@layout/fragment_ranking_list" />

    <fragment
        android:id="@+id/ranking_map"
        android:name="com.stopsmoke.kekkek.presentation.rankingMap.RankingMapFragment"
        app:route="ranking_map"
        tools:layout="@layout/fragment_ranking_map" />


    <fragment
        android:id="@+id/notice_list"
        android:name="com.stopsmoke.kekkek.presentation.noticeWritingList.NoticeListFragment"
        app:route="notice_list"
        tools:layout="@layout/fragment_notice_list" />

</navigation>