<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/smoking_questionnaire_start_screen"
    android:id="@+id/nav_smoking_questionnaire">

    <fragment
        android:id="@+id/smoking_questionnaire_start_screen"
        android:name="com.stopsmoke.kekkek.presentation.smokingaddictiontest.start.SmokingAddictionTestStartFragment"
        tools:layout="@layout/fragment_smoking_addiction_test_start">
        <action
            android:id="@+id/action_smoking_questionnaire_start_screen_to_smoking_questionnaire_question_screen"
            app:destination="@id/smoking_questionnaire_question_screen" />
    </fragment>

    <fragment
        android:id="@+id/smoking_questionnaire_question_screen"
        android:name="com.stopsmoke.kekkek.presentation.smokingaddictiontest.assessment.SmokingAddictionTestFragment"
        tools:layout="@layout/fragment_smoking_addiction_test">
        <action
            android:id="@+id/action_smoking_questionnaire_question_screen_to_smoking_questionnaire_result_screen"
            app:destination="@id/smoking_questionnaire_result_screen"
            app:popUpTo="@id/smoking_questionnaire_start_screen"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/smoking_questionnaire_result_screen"
        android:name="com.stopsmoke.kekkek.presentation.smokingaddictiontest.result.SmokingAddictionTestResultFragment"
        tools:layout="@layout/fragment_smoking_addiction_test_result"/>

</navigation>